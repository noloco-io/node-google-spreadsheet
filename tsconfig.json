{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "noEmitOnError": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "ts-node": {
    "swc": true
  }
}
